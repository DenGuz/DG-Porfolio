* {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}

body {
    background-color:rgb(221, 219, 219);
}

.header  {
    padding: 25px;
    font-family: Helvetica,Arial, sans-serif;
    background-color: #20485c;
    display: flex;
    justify-content: space-between;
    z-index: 9999;
}
.name {
    font-family:Helvetica,Arial, sans-serif;
    background-color: #40a6aa;
    color: #20485c;
}  

header nav ul {
    display:flex;
    flex-wrap:wrap;
    justify-content:space-between;
    align-items:center;
    list-style: none;
} 
   
header nav ul li a {
    padding:25px 20px;
    font-weight: lighter;
    font-size: 1.55vw;   
    color: white;
    text-transform: uppercase;
    text-decoration: none;
    display: block;
    
} 
header nav ul li a:hover {
     background:#40a6aa ;
     font-size: 1.75vw;
}
.image {
    width: 35%;
    border-radius: 25px;
    flex: 1 12%;

}
.about-me {
    margin: 50px auto;
    padding-bottom: 50px;
    width: 80%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
   
}
.about-me-text {
    display:flex;
    flex-wrap: wrap;
    color:#20485c;
    font-size: 26px;
    line-height: 1.5;
    
    padding-left: 50px;
    border-left: 3px solid rgb(5, 92, 95);
}
h2 {
    color:#20485c;
}

.about-me h2 {
    width: 100%;
    text-align: center;
}  
.about-me-img{
    vertical-align: middle;
    width: 35%;
    border-radius: 25px;
    flex: 1 12%;
}
.contact-me{
    font-family: Helvetica,Arial, sans-serif;
    background-color:#40a6aa;
    color:#20485c;
    display: flex;
    justify-content:space-around;
}
    
p {
    justify-content: space-around;
}
.title {
    font-size: 42px;
    text-align: left;
    padding-right: 30px;
    margin-bottom: 40px;
}
.flex-colum {
    width: 25%;
    border-right: 3px solid #20485c;
}  
.flex-row{
    flex-direction: row;
    display: flex;
    justify-content: center;
}